                    @Html.DisplayNameFor(model => model.Argomento.Nome)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Argomento.Nome)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Docente.Nome)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Docente.Nome)
                </dd>

